@model Student
@{

    string mode = Model != null ? "Edit" : "Create";
    
}
<div>
    <h4 class="display-4">@mode User</h4>
    <hr/>
    <div class="text-center">
        <form asp-action="Edit" asp-controller="Students" method="post">
            <div class="alert-danger" asp-validation-summary="All"></div>
            @if(mode == "Edit"){
                <input type="hidden" asp-for="StudentId" value="@(Model?.StudentId)"/>
            }
            <div class="form-group">
                <label asp-for="FirstName" class="form-label">FirstName :</label>
                <input asp-for="FirstName"/>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label">LastName :</label>
                <input asp-for="LastName"  />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email :</label>
                <input asp-for="Email"  />
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="form-label">Address1 :</label>
                <input asp-for="Address1" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="form-label">Address2 :</label>
                <input asp-for="Address2" class="form-control" />
            </div>
            
            <button class="btn btn-danger" type="submit">@mode</button>


        </form>
    </div>
</div>
